Select interests for <%= @cur_u.email %> <br>

<form action = "/user_interests/handle_check_boxes">

        <% @interests.each do |interest| %>
                <% selected= false %>
                
                <% @user_interests.each do |user_interest| %>

                        <% if user_interest.interest_id == interest.id  %>
                                <% selected = true %>        
                                <% break %>
                        <% end %>
                
                <% end %>

                <%# prefills the form %>
                <% if selected == true %>
                        <%=interest.name%> <%= check_box_tag name="tag_ids[]", value=interest.id, checked = true%> <br>
                
                <% else %>
                        <%=interest.name%><input type="checkbox" name="tag_ids[]" value="<%=interest.id %>" /> <br>
                <% end %>

        <% end %>
        <input type="submit" value="Submit"><br>
</form>