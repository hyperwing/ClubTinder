<%# Edited 11/10/2019 by Sri Ramya Dandu: Added additional fields
    Edited 11/15/2019 by Sri Ramya Dandu: Created drop downs
    Edited 11/20/2019 by Neel Mansukhani: Added club forms    
    Edited 11/20/2019 by Sharon Qiu: Edited view to make it prettier%>
<%= stylesheet_link_tag 'new_session_registration'%>
<div id="gradient-bg">
<div class="container-fluid sign-up-form-container">
<h2 class="sign-up-title">Sign up</h2>
<% years = (1950..2050).to_a %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :role %><br />
    <select name="user[role]" id="user_role" required>
        <option value="0">User</option>
        <option value="1">Club</option>
    </select>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "first-name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last-name" %>
  </div>

  <div class="field">
    <%= f.label :grad_year %><br />
    <%= f.select :grad_year, options_for_select(years)%>
  </div>

  <div class="field">
    <%= f.label :gender%><br />
    <%= f.select :gender, options_for_select(['Male', 'Female', 'Other'])%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <%= f.submit %>
<% end %>
<div id="club" style="display:none;">
  <%= form_with(model: Club.new, local: true, id: "club_form") do |form| %>
    <%= render 'clubs/form_entries', club: @club, form: form %>
  <% end %>
</div>
<%= button_to "Save", "#", id: "save" %>
<%= render "devise/shared/links" %>
</div>
</div>
<script type="text/javascript">
$("#user_role").change(function() {
   var select_value = document.getElementById("user_role").value;
   var club_form = document.getElementById("club");
   if(select_value == 1) {
     club_form.style.display = "block";
   } else {
     club_form.style.display = "none";
   }
})

$("#save").on("click", function() {
  var select_value = document.getElementById("user_role").value;
  if(select_value == 1) {
    $("club_form").submit();
  }
    //$('new_user').attr('action', "/users").submit();
});
</script>

