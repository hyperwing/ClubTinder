<%= stylesheet_link_tag 'stats'%>

<div class = "user-display">
    <h1> All Registered Clubs </h1>
    <p> Total Clubs: <%= @clubs.length %> </p>
    <button class="btn btn-outline-primary createButton"> <a href = "/clubs/new"> Create a Club </a> </button>
    <br/>
    <table class="table table-nonfluid table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Club Name</th>
                <th scope="col">Mission</th>
                <th scope="col">Affiliations</th>
                <th scope="col">Webpage Link</th>
                <th colspan="3">Options</th>
            </tr>
        </thead>

        <tbody>
            <% @clubs.each do |club| %>
                <tr>  
                <td> <%= club.name %></td>
                <td> <%= club.mission %></td>
                <td> <%= club.affiliations %></td>
                <td><a href="<%= club.link %>">link</a></td>
                <td> <a href = "/clubs/<%= club.id %>"> Show </a></td>
                <td> <a href ="#"> Edit </a></td>  
                <td><%= link_to 'Destroy', club, method: :delete,
                                                data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>