<%= stylesheet_link_tag 'admin'%>

<% if @club_has_matches %>
    <h1> <%= @club.name %> </h1>


    <table class="table col-md-3">
            <thead class="thead-dark">
              <tr>
                  <th scope="col">Matches per Day</th>
                  <th scope="col">Gender Breakdown</th>
                  <th scope="col">Club Interests</th>
                  <th scope="col">Other Popular Clubs</th>
        
              </tr>
           </thead>
           <tbody>
              <tr>
                <td><%= line_chart @club_match_data %></td>
                <td><%= pie_chart User.group(:gender).count %></td>

                <td>
                    <% @club_interests.each do |interest| %>
                        <%= interest.name %> <br>
                    <% end %> 
                </td>
    
                <td><%= bar_chart @match_data.group(:name).count %></td>
        
              </tr>
            </tbody>
            <thead class="thead-dark">
                    <tr>
                        <th scope="col">Users</th>
                    </tr>
            </thead>
        <% @users_x.each do |user| %>
            <tr>

                <td> <%= user.first_name %></td>
                <td> <%= user.last_name %></td>
                <td> <%= user.email %></td>
                <td> <%= user.grad_year %></td>
                <td> <a href = "/users/<%= user.id %>"> Show </a></td>
            </tr>
        <% end %>
    </table>


<% else %>

    <div class="inspiration">
        No Matches yet!<br>
        Go get some matches!<br>

        <iframe src="https://giphy.com/embed/1fXcl6MEoOQvbOw3ZS" width="480" height="480" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/yes-yeah-yass-1fXcl6MEoOQvbOw3ZS"></a></p>
    </div>
<% end %>