<h1 style=text-align:center> Matches </h1>
<table>
    <tr>
        <th>Club name</th>
        <th>Mission</th>
        <th>Location</th>
        <th>Affiliations</th>
        <th>link</th>
        <th>img</th>
    </tr>
    <%@matched_clubs.each do |club| %>
        <tr>
            <td><%=club.name%></td>
            <td><%=club.mission%></td>
            <td><%=club.location%></td>
            <td><%=club.affiliations%></td>
            <td><%=club.link%></td>
            <td><%=image_tag club.img%></td>
            <td><%= link_to 'Unmatch', {:controller => 'club_matches', :action => 'update', :club => club}%></td>
        </tr>
    <% end %>

</table>
<br/>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>  
<%= link_to 'Rejected', 'not_matched' %>  



