<%= stylesheet_link_tag 'home' %>

<div id="mainCarousel" class="carousel slide" data-ride="carousel" data-interval="false" data-keyboard="false">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="list-of-clubs-container">
                <%= image_tag(@images[0], :alt => "Not Available", :class => "swipe-img blue") %>
                <span class="header0">
                    Welcome to<br />
                    Hubbub.
                    <div class="sub-header">
                        Hubbub was built as a platform<br />
                        to connect you with clubs <br />
                        at YOUR school
                    </div>
                </span>
            </div>
        </div>
        <div class="carousel-item">
            <div class="list-of-clubs-container">
                <%= image_tag(@images[1], :alt => "Not Available", :class => "swipe-img") %>
                <span class="header1">
                    Welcome to Hubbub.
                    <div class="sub-header">
                        Hubbub was built as a platform<br />
                        to help YOU join clubs at your school.
                    </div>
                </span>
            </div>
        </div>
        <div class="carousel-item">
            <div class="list-of-clubs-container">
                <%= image_tag(@images[2], :alt => "Not Available", :class => "swipe-img") %>
                <span class="header2">
                    Welcome to Hubbub.
                    <div class="sub-header">
                        Hubbub was built as a platform<br />
                        to connect you with clubs at YOUR school
                    </div>
                </span>
            </div>
        </div>
    </div>
</div>
<a class="carousel-control-prev" href="#mainCarousel" role="button" data-slide="prev">
    <div class="carousel-control-prev-icon" aria-hidden="true"></div>
</a>
<a class="carousel-control-next" href="#mainCarousel" role="button" data-slide="next">
    <div class="carousel-control-next-icon" aria-hidden="true"></div>
</a>

<div class="jumbotron p-3 p-md-5 display-row">
        <div class="col-md-6 px-0 aligned left">
          <p class="lead mb-1">Match with clubs with our state of the art matching algorithm</p>
          <p class="lead mb-1">We'll be sure to find you clubs that you will love.</p>
          <p class="lead mb-1">Find new hobbies you didn't think you would even like!</p>
        </div>
        <div class="col-md-6 px-0 aligned right">
            <p class="lead mb-1">Match with clubs with our state of the art matching algorithm</p>
        </div>
</div>

<div class="jumbotron display-row">
        <div class="col-md-6 px-0 aligned left">
            <%= image_tag("laptop.jpg", :alt => "Not Available", :class => "swipe-img") %>
        </div>
        <div class="col-md-6 px-0 aligned right">
          <p class="lead mb-1">Help users find and join your club</p>
          <p class="lead mb-1">View statistics about your users</p>
          <p class="lead mb-1">Learn more about your users</p>
        </div>
</div>
<script>
    $('#mainCarousel').carousel({
    interval: 4000
});
</script>