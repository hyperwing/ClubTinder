<%# Created 10/19/2019 by Leah Gillespie: Added bootstrap carousel %>
<%= stylesheet_link_tag 'swipe'%>
  <h1>Choose your Clubs</h1>
  <h2>Click the left button to reject a club or the right button to match! Then go to the matched tab to see all your matches!</h2>
    <div id="swipeCarousel" class="carousel slide" data-ride="carousel" data-interval="false" data-keyboard="false">
      <div class="container">
      <div class="carousel-inner">
        <%first = true
          if @potential_matches.length > 0
            if first
              active = "carousel-item active"
              first = false
              else
              active = "carousel-item"
              end
          %>
          <div class="carousel-item active">
            <div class="col-10 list-of-clubs-container">
              <img src="<%=@potential_matches[0][0].img%>" class="swipe-img" alt="<%=@potential_matches[0][0].name%>"%>
              <div class="selected-matches-card-body">
                <h5 class="selected-matches-card-title"><%= @potential_matches[0][0].name %></h5>
                <p class="selected-matches-card-text"><%= @potential_matches[0][0].mission %></p>
              </div>
            </div>
          </div>
          <%if @potential_matches.length > 1 %>
            <div class="carousel-item">
              <div class="col-10 list-of-clubs-container">
                <img src="<%=@potential_matches[1][0].img%>" class="swipe-img" alt="<%=@potential_matches[1][0].name%>"%>
                <div class="selected-matches-card-body">
                  <h5 class="selected-matches-card-title"><%= @potential_matches[1][0].name %></h5>
                  <p class="selected-matches-card-text"><%= @potential_matches[1][0].mission %></p>
                </div>
              </div>
            </div>
            <%end %>
          <%else%>
          <p>Check the "Matched" tab for the clubs you've selected!</p>
        <%end%>
      </div>
        <%= link_to '❰❰', add_new_club_matches_url(:matched => 0, :club_name => @potential_matches[0][0].name), :method => :patch, :class => "carousel-control-prev", :role => "button", :slide => "prev"%>
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Reject</span>
      <%= link_to '❱❱', add_new_club_matches_url(:matched => 1, :club_name => @potential_matches[0][0].name), :method => :patch, :class => "carousel-control-next", :role => "button", :slide => "next"%>
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Match</span>
      </table>
    </div>
    </div>