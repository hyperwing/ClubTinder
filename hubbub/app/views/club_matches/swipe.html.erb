<!doctype html>
<html lang="en">
  <head>
    <script src="swipe_carousel.js"></script>
    <%#<link rel="stylesheet" href=""> %>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <title>Choose your Clubs</title>
  </head>
  <body>
    <h1>Choose your Clubs</h1>
    <h2>Press the left arrow for "no" and the right arrow for "yes"</h2>
    <table>
      <div id="swipeCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <%@potential_matches.each do |c|
            first = true;
            if first
              active = "carousel-item active"
              first = false;
             else
              active = "carousel-item"
             end
            %>
            <div class="<%= %"#{active}"%>">
              <tr class="d-block w-100">
                <td><%=%"#{c[0].name}"%></td>
                <td><%=%"#{c[0].mission}"%></td>
                <td><%=%"#{c[0].affiliations}"%></td>
                <td><%=%"#{c[0].location}"%></td>
              </tr>
            </div>
          <%end%>
        </div>
        <a class="carousel-control-prev" href="#swipeCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#swipeCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </table>
  </body>
</html>